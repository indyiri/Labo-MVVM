<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiicons="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             xmlns:viewmodels="clr-namespace:Todo.UI.ViewModels"
             xmlns:models="clr-namespace:Todo.UI.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Todo.UI.Pages.ToDoListPage"
             Title="ToDoListPage"
             x:DataType="viewmodels:ToDoListViewModel"
             Shell.NavBarIsVisible="False">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior 
            EventName="Appearing"
            Command="{Binding LoadDataCommand}"/>
    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <Style x:Key="InvalidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="LightCoral" />
        </Style>
        <Style x:Key="ValidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="{StaticResource Primary}" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="5">

        <!-- Title -->
        <Label Text="C# Mobile Todo List" 
               FontSize="Title"
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               Margin="0,0,0,20" />

        <!-- Entry for New To-Do -->
        <Grid ColumnDefinitions="*,Auto">
            <Entry x:Name="NewToDoEntry"
                   Placeholder="Enter a new to-do..."
                   Text="{Binding NewTodoTitle}">
                <Entry.Behaviors>
                    <toolkit:TextValidationBehavior
                        InvalidStyle="{StaticResource InvalidEntryStyle}"
                        ValidStyle="{StaticResource ValidEntryStyle}"
                        Flags="ValidateOnValueChanged"
                        MinimumLength="10"/>
                </Entry.Behaviors>
            </Entry>
            <Button Grid.Column="1" 
                    CornerRadius="45" 
                    Padding="0" 
                    Text="+"
                    Command="{Binding AddTodoCommand}"/>                                            <!--Verwijst naar de AddToDo in the 'ToDoListViewModel.cs'-->
        </Grid>

        <!-- List of To-Dos -->
        <CollectionView ItemsSource="{Binding TodoItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ToDoItem">
                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItems>
                                <SwipeItem mauiicons:MauiIcon.Value="{mauiicons:FluentFilled Icon=Delete32Filled, IconSize=Large, IconColor={StaticResource Primary}}"
                                BackgroundColor="LightCoral" 
                                Command="{Binding x:DataType='viewmodels:ToDoListViewModel', 
                            Source={RelativeSource AncestorType={x:Type viewmodels:ToDoListViewModel}}, 
                            Path=DeleteTodoCommand}"  
                                 CommandParameter="{Binding .}"  
                                   />
                            </SwipeItems>
                        </SwipeView.LeftItems>
                        <Grid ColumnDefinitions="Auto,*">
                            <CheckBox IsChecked="{Binding IsCompleted}" />
                            <Label Grid.Column="1" 
                    TextDecorations="{Binding IsCompleted, Converter={StaticResource CompletedStrike}}"
                    Text="{Binding Title}" 
                    VerticalOptions="Center"
                    Margin="10,0,0,0" />
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>